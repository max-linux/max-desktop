#!/usr/bin/make -f

DH_VERBOSE = 1
PACKAGE = max-localwriter.oxt
URL = http://localhost/remote-files/${PACKAGE}

%:
	dh $@

override_dh_auto_clean:
	if [ -d build ]; then \
	rm -rf build; \
	fi 

override_dh_auto_build:
	if ! [ -d build ]; then  \
	mkdir build && \
	cd build && curl -LO ${URL} ; \
	fi

override_dh_shlibdeps:
	#do nothing

override_dh_strip:
	#do nothing
