#!/bin/sh
# postinst script for acme-migasfree-client
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package

dpkg-divert --package max-examen-av --divert /etc/security/access.conf.orig --rename /etc/security/access.conf

if [ -f /etc/security/access.conf.orig ]; then
    cp /etc/security/access.conf.orig /etc/security/access.conf
    echo "-:examen alumno:tty1 tty2 tty3 tty4 tty5 tty6 tty7" >> /etc/security/access.conf
    echo "+:ALL:ALL" >> /etc/security/access.conf
fi

dpkg-divert --package max-examen-av --divert /etc/pam.d/login.orig --rename /etc/pam.d/login

if [ -f /etc/pam.d/login.orig ]; then
    cp  /etc/pam.d/login.orig /etc/pam.d/login
    sed -i 's/# account  required/account  required/' /etc/pam.d/login
fi

existe_examen=$(cat /etc/passwd | awk -F ":" '$1=="examen" {print $1}')

if [ "$existe_examen" != "examen" ]; then
    useradd -m -s /bin/bash -c Examen -p $(openssl passwd -1 'examen') examen
    usermod -aG adm,dialout,cdrom,floppy,audio,video,plugdev,netdev,scanner,sambashare examen
fi

if [ ! -d /home/examen/.config/dconf ]; then
   mkdir -p /home/examen/.config/dconf
   cp /usr/share/max-examen-av/user /home/examen/.config/dconf/
   chown -R examen: /home/examen/.config/dconf
   fi



bash /usr/sbin/max-examen-clean.sh || true

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0